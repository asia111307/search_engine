<script>

(function() {
    function fontsLoaded() {
        document.documentElement.classList.add('fonts-loaded');
        sessionStorage.fontsLoadedFoutWithClassPolyfill = true;
    }

    function iconsLoaded() {
        document.documentElement.classList.add('icons-loaded');
        sessionStorage.iconsLoadedFoutWithClassPolyfill = true;
    }

    
    if (sessionStorage.fontsLoadedFoutWithClassPolyfill) {
        fontsLoaded();
    }
    if (sessionStorage.iconsLoadedFoutWithClassPolyfill) {
        iconsLoaded();
    }

    if (
        sessionStorage.fontsLoadedFoutWithClassPolyfill &&
        sessionStorage.iconsLoadedFoutWithClassPolyfill
    ) {
    return;
    }


    
    if (!("fonts" in document)) {
        fontsLoaded();
        iconsLoaded();
        return;
    }

    Promise.all([
        document.fonts.load("1em Roboto"),
        document.fonts.load("500 1em Roboto"),
        document.fonts.load("700 1em Roboto"),
        document.fonts.load("1em Roboto Condensed"),
        document.fonts.load("500 1em Roboto Condensed"),
        document.fonts.load("700 1em Roboto Condensed")
    ]).then(function () {
        fontsLoaded();
    });


    document.fonts.load('1em FontAwesome','\uf287\uf142\uf0fc').then(function () {
        iconsLoaded();
    });
})();
</script>
