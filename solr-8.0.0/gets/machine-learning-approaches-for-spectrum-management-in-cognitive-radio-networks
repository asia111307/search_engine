/mml:mi></mml:mfenced></mml:mrow><mml:mrow><mml:mspace width="0.5em"></mml:mspace><mml:mi mathvariant="normal">P</mml:mi><mml:mspace width="0.25em"></mml:mspace><mml:mi>(</mml:mi><mml:msub><mml:mi mathvariant="normal">s</mml:mi><mml:mrow><mml:mi mathvariant="normal">t</mml:mi><mml:mo>+</mml:mo><mml:mn>1</mml:mn></mml:mrow></mml:msub><mml:mo>=</mml:mo><mml:mi mathvariant="normal">j</mml:mi><mml:mfenced open="|" close=")" separators=";"><mml:msub><mml:mi mathvariant="normal">&psi;</mml:mi><mml:mi mathvariant="normal">t</mml:mi></mml:msub><mml:mi mathvariant="normal">&theta;</mml:mi></mml:mfenced></mml:mrow></mml:mfrac></mml:math><span class="equ"></span></div><div id="df_" class="formula panel"><mml:math xmlns:mml="http://www.w3.org/1998/Math/MathML" specific-use="web-only" id="m390"><mml:mo>=</mml:mo><mml:mfrac><mml:mrow><mml:mspace width="0.25em"></mml:mspace><mml:msub><mml:mi mathvariant="normal">P</mml:mi><mml:mrow><mml:mn>0</mml:mn><mml:mi mathvariant="normal">i</mml:mi></mml:mrow></mml:msub><mml:mspace width="0.25em"></mml:mspace><mml:mi mathvariant="normal">P</mml:mi><mml:mspace width="0.25em"></mml:mspace><mml:mfenced open="(" close=")" separators="|;"><mml:mrow><mml:msub><mml:mi mathvariant="normal">s</mml:mi><mml:mi mathvariant="normal">t</mml:mi></mml:msub><mml:mo>=</mml:mo><mml:mi mathvariant="normal">i</mml:mi></mml:mrow><mml:msub><mml:mi mathvariant="normal">&psi;</mml:mi><mml:mi mathvariant="normal">t</mml:mi></mml:msub><mml:mi mathvariant="normal">&theta;</mml:mi></mml:mfenced></mml:mrow><mml:mrow><mml:mspace width="0.5em"></mml:mspace><mml:mi mathvariant="normal">P</mml:mi><mml:mspace width="0.25em"></mml:mspace><mml:mi>(</mml:mi><mml:msub><mml:mi mathvariant="normal">s</mml:mi><mml:mrow><mml:mi mathvariant="normal">t</mml:mi><mml:mo>+</mml:mo><mml:mn>1</mml:mn></mml:mrow></mml:msub><mml:mo>=</mml:mo><mml:mi mathvariant="normal">j</mml:mi><mml:mfenced open="|" close=")" separators=";"><mml:msub><mml:mi mathvariant="normal">&psi;</mml:mi><mml:mi mathva